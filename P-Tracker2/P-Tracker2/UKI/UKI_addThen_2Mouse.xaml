<Window x:Class="P_Tracker2.UKI_addThen_Mouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Mouse Move Event" Height="66" Width="251" WindowStyle="ToolWindow" Icon="/P_Tracker2;component/img/iconP.png" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Background="Black">
        <Button Content="Add" Height="25" HorizontalAlignment="Left" Margin="183,1,0,0" Name="butAdd" VerticalAlignment="Top" Width="42" Click="butAdd_Click" />
        <ComboBox Height="23" Margin="5,3,0,0" Name="comboKey" VerticalAlignment="Top" HorizontalAlignment="Left" Width="71" ItemsSource="{Binding}" SelectedIndex="0">
            <ComboBoxItem Content="Move by" />
            <ComboBoxItem Content="Move to" />
        </ComboBox>
        <Label Content="X:" Height="28" HorizontalAlignment="Left" Margin="78,2,0,0" Name="label1" VerticalAlignment="Top" Foreground="White" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="95,2,0,0" Name="txtX" VerticalAlignment="Top" Width="32" />
        <Label Content="Y:" Foreground="White" Height="28" HorizontalAlignment="Left" Margin="126,2,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="143,2,0,0" Name="txtY" VerticalAlignment="Top" Width="32" />
    </Grid>
</Window>
