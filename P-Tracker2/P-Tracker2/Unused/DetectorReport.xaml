<Window x:Class="P_Tracker2.DetectorReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sitting Detection" Height="300" Width="300" Closed="Window_Closed" Icon="/P_Tracker2;component/img/iconP.png" Closing="Window_Closing">
    <Grid Background="Black">
        <DataGrid AutoGenerateColumns="False" Name="dataGrid" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" VerticalScrollBarVisibility="Visible" CanUserResizeRows="False" Margin="0,0,0,28">
        </DataGrid>    
        <Button Content="Update" Height="23" HorizontalAlignment="Left" Margin="191,0,0,2" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" />
        <Button Content="Export CSV" Height="23" HorizontalAlignment="Left" Margin="110,0,0,2" Name="butExport" VerticalAlignment="Bottom" Width="75" Click="butExport_Click" />
        <Button Content="Export XLS" Height="23" HorizontalAlignment="Left" Margin="29,0,0,2" Name="butExportExcel" VerticalAlignment="Bottom" Width="75" Click="butExportExcel_Click" />
    </Grid>
</Window>
